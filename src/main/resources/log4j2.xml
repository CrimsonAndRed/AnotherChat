    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- not yet <File name="File1" fileName="output.log" bufferedIO="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File> -->
    </Appenders>


    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <!-- not yet <AppenderRef ref="File1"/>-->
        </Root>
    </Loggers>
</Configuration>